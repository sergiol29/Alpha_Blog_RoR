<h2 align="center">Show article </h2>

<div class="well col-xs-8 col-xs-offset-2">
    <h5 class="description"><strong>Title:</strong> <%= @article.title %></h5>
    <hr>
    <h5 class="description"><strong>Description:</strong> <%= @article.description %></h5>

    <div class="users-actions">
        <%= link_to "Edit this user", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this user", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete the user?"}, class: "btn btn-xs btn-danger" %>
        <%= link_to "View all user", articles_path, class: "btn btn-xs btn-success" %>
    </div>
</div>